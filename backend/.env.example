# Backend Environment Variables Example
# Copy this file to .env and fill in your specific values

# Application settings
SECRET_KEY=your_app_secret_key_here
FLASK_ENV=development
DEBUG=True

# Database Configuration
# If using SQLite (default)
DATABASE_URI=sqlite:///tamagotchi.db

# If using MongoDB (uncomment and configure)
# MONGODB_URI=mongodb://localhost:27017/tamagotchi

# API Configuration
PORT=5000
HOST=0.0.0.0

# JWT Authentication
# IMPORTANT: In production, use a strong, randomly generated key
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ACCESS_TOKEN_EXPIRES=86400  # 24 hours in seconds
